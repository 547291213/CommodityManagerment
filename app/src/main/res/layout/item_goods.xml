<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <com.example.commoditymanagerment.DrawableView.ShapedImageView
        android:id="@+id/siv_goodsImg"
        android:layout_width="200dp"
        android:layout_height="120dp"
        app:round_radius="12dp"
        app:shape_mode="round_rect"
        android:src="@drawable/ic_pic_not_found"
        android:layout_margin="5dp"
        android:scaleType="fitXY"
        />



    <TextView
        android:id="@+id/tv_goodsName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:textSize="22sp"
        android:layout_toRightOf="@id/siv_goodsImg"
        android:maxLines="1"
        android:ellipsize="end"
        android:text="xp134525@gmail.com"
        android:textColor="@color/black"
        />
    <!--android:layout_marginLeft="15dp"-->


    <TextView
        android:id="@+id/tv_goodsPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/siv_goodsImg"
        android:layout_marginBottom="7dp"
        android:layout_above="@id/tv_goodsTimeText"
        android:textSize="16dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:text="商品现价："
        android:padding="0dp"
        />


    <TextView

        android:id="@+id/tv_goodsCountText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/tv_goodsCount"
        android:layout_marginBottom="7dp"
        android:layout_above="@id/tv_goodsTimeText"
        android:textSize="16dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:text="数量:"
        android:padding="0dp"
        />

    <TextView
        android:id="@+id/tv_goodsCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="7dp"
        android:layout_above="@id/tv_goodsTimeText"
        android:textSize="16dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:text="5"
        android:padding="0dp"
        />



    <TextView

        android:id="@+id/tv_goodsTimeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/siv_goodsImg"
        android:layout_marginBottom="3dp"
        android:layout_above="@id/tv_goodsTime"
        android:textSize="16dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:text="最后修改时间："
        android:padding="0dp"
        />

    <TextView
        android:id="@+id/tv_goodsTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/siv_goodsImg"
        android:layout_marginBottom="3dp"
        android:layout_alignBottom="@+id/siv_goodsImg"
        android:textSize="16dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:text="hello world"
        android:padding="0dp"
        />


</RelativeLayout>